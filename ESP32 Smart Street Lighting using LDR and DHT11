#include "DHT.h"

#define DHTPIN 27
#define DHTTYPE DHT11
#define LDR_PIN 34     // Analog pin
#define LED_PIN 33     // Output pin for LED

DHT dht(DHTPIN, DHTTYPE);

void setup() {
  Serial.begin(115200);
  dht.begin();
  pinMode(LED_PIN, OUTPUT);
}

void loop() {
  // Read sensors
  int ldrValue = analogRead(LDR_PIN);  // LDR range: 0â€“4095
  float humidity = dht.readHumidity(); // Humidity in %

  // Display readings
  Serial.print("LDR: "); Serial.print(ldrValue);
  Serial.print(" | Humidity: "); Serial.print(humidity); Serial.println(" %");

  // Decision Logic
  if (ldrValue < 2000 || humidity > 85.0) {
    digitalWrite(LED_PIN, HIGH);  // Turn ON LED
    Serial.println("ðŸ’¡ LED ON (dark or humid)");
  } else {
    digitalWrite(LED_PIN, LOW);   // Turn OFF LED
    Serial.println("ðŸ”… LED OFF");
  }

  delay(2000); // Delay between reads
}




#include "DHT.h"
#define LDR_PIN 34    // Analog pin for LDR
#define LED1 25       // LED for low brightness level
#define LED2 26       // LED for medium level
#define LED3 33
#define LED4 17       // LED for high brightness
#define DHTPIN 27
#define DHTTYPE DHT11


DHT dht(DHTPIN, DHTTYPE);


void setup() {
  Serial.begin(115200);
  pinMode(LED1, OUTPUT);
  pinMode(LED2, OUTPUT);
  pinMode(LED3, OUTPUT);
  pinMode(LED4, OUTPUT);
  dht.begin();

}

void loop() {
  int ldrValue = analogRead(LDR_PIN);  // Range: 0â€“4095
   float humidity = dht.readHumidity();
  Serial.print("LDR Value: ");
  Serial.println(ldrValue);
  Serial.print(" | Humidity: "); Serial.print(humidity); Serial.println(" %");

  if (humidity > 85.0) {
    digitalWrite(LED4, HIGH);  // Turn ON LED
    Serial.println("ðŸ’¡ LED ON (dark or humid)");
  } 
  if (ldrValue > 3000) {
    // Bright light â€” all LEDs ON
    digitalWrite(LED1, LOW);
    digitalWrite(LED2, LOW);
    digitalWrite(LED3, LOW);
  } else if (ldrValue > 1500) {
    // Medium light â€” 2 LEDs ON
    digitalWrite(LED1, LOW);
    digitalWrite(LED2, LOW);
    digitalWrite(LED3, HIGH);
  } else {
    // Dark â€” all LEDs OFF
    digitalWrite(LED1, HIGH);
    digitalWrite(LED2, HIGH);
    digitalWrite(LED3, HIGH);
  }
  

  delay(2000);
  digitalWrite(LED4,LOW);
  delay(1000);
}
